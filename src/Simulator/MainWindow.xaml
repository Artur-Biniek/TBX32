<Window x:Class="ArturBiniek.Tbx32.Simulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="360" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid x:Name="grdLedScreen" Background="Black" HorizontalAlignment="Center" VerticalAlignment="Top" />


        <StackPanel Focusable="False" Orientation="Vertical" Grid.Column="1">
            <Button x:Name="btnReset" Focusable="False" IsTabStop="False" Content="Reset" Click="btnReset_Click" />
            <Button x:Name="btnStep" Focusable="False" IsTabStop="False" Content="Step" Click="btnStep_Click" />
            <Button x:Name="btnRun" Focusable="False" IsTabStop="False" Content="Run" Click="btnRun_Click" />
            <Label x:Name="txtAvg" />
        </StackPanel>
    </Grid>
</Window>
